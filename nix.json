{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Renovate configuration for update flake.lock files",
	"nix": {
		"enabled": true
	},
	"packageRules": [
		{
			"matchManagers": ["nix"],
			"lockFileMaintenance": {
				"enabled": true,
				"automerge": true,
				"schedule": ["* * * * 1"]
			}
		}
	]
}
